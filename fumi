    <style>
        body { margin: 0; overflow: hidden; background: #000; font-family: 'Georgia', serif; }
        canvas { display: block; }
        
        /* Interfaz Minimalista */
        .controls {
            position: absolute;
            bottom: 40px;
            width: 100%;
