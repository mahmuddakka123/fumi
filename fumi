<body>

    <div class="controls">
        <button class="btn" onclick="playMusic()">ðŸŽµ MÃºsica</button>
        <button class="btn" onclick="revealMessage()">âœ¨ Para Zara</button>
    </div>

    <div id="overlay">
        <div id="typewriter"></div>
        <button class="btn" onclick="closeMessage()">Volver al Espacio</button>
    </div>

    <audio id="bgMusic" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3" type="audio/mpeg">
    </audio>

    <script type="importmap">
        { "imports": { "three": "https://unpkg.com/three@0.160.0/build/three.module.js" } }
    </script>

    <script type="module">
        import * as THREE from 'three';

        // Escena y CÃ¡mara
        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.body.appendChild(renderer.domElement);

        // Estrellas
        const starGeo = new THREE.BufferGeometry();
        const starVertices = [];
        for(let i=0; i<15000; i++) {
            starVertices.push((Math.random()-0.5)*2000, (Math.random()-0.5)*2000, (Math.random()-0.5)*2000);
        }
        starGeo.setAttribute('position', new THREE.Float32BufferAttribute(starVertices, 3));
        const stars = new THREE.Points(starGeo, new THREE.PointsMaterial({color: 0xffffff, size: 0.7}));
        scene.add(stars);

        // Sol (El centro de Zara)
        const sun = new THREE.Mesh(
            new THREE.SphereGeometry(4, 32, 32),
            new THREE.MeshBasicMaterial({ color: 0xffd700 })
        );
        scene.add(sun);

        // Planetas
        const planets = [];
        const createPlanet = (size, color, dist, speed) => {
            const container = new THREE.Object3D();
            const planet = new THREE.Mesh(
                new THREE.SphereGeometry(size, 32, 32),
                new THREE.MeshStandardMaterial({ color: color, roughness: 0.5 })
            );
            planet.position.x = dist;
            container.add(planet);
            scene.add(container);
            planets.push({ container, speed });
        };

        createPlanet(1, 0x44aaff, 12, 0.01);  // Azul
        createPlanet(0.8, 0xff7733, 20, 0.008); // Naranja
        createPlanet(1.5, 0xcc88ff, 30, 0.005); // PÃºrpura

        const light = new THREE.PointLight(0xffffff, 500, 100);
        scene.add(light);
        scene.add(new THREE.AmbientLight(0x404040));

        camera.position.z = 50;
        camera.position.y = 15;
        camera.lookAt(0,0,0);

        function animate() {
            requestAnimationFrame(animate);
            sun.rotation.y += 0.002;
            planets.forEach(p => p.container.rotation.y += p.speed);
            stars.rotation.y += 0.0002;
            renderer.render(scene, camera);
        }
        animate();

        // LÃ³gica del Mensaje
        const messageText = "Zara, eres como una estrella: a veces no te veo, pero sÃ© que siempre estÃ¡s ahÃ­ iluminando mi mundo. Eres mi universo entero. âœ¨";
        let i = 0;

        window.revealMessage = () => {
            document.getElementById('overlay').style.display = 'flex';
            typeWriter();
        };

        window.closeMessage = () => {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('typewriter').innerHTML = "";
            i = 0;
        };

        function typeWriter() {
            if (i < messageText.length) {
                document.getElementById('typewriter').innerHTML += messageText.charAt(i);
                i++;
                setTimeout(typeWriter, 50);
            }
        }

        window.playMusic = () => {
            const audio = document.getElementById('bgMusic');
            audio.paused ? audio.play() : audio.pause();
        };

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
