        <div class="overlay-text">Cambiando de Escena...</div>
    </div>

    <script>
        // Intentar reproducir música al primer clic (los navegadores bloquean audio automático)
        document.body.addEventListener('click', function() {
            const audio = document.getElementById('miMusica');
            if (audio.paused) {
                audio.play();
                audio.volume = 0.5;
            }
        }, { once: true });

        function iniciarRedirect() {
            const overlay = document.getElementById('redirect-overlay');
            overlay.classList.add('active');

            // AQUÍ PONES EL LINK A DONDE QUIERES MANDARLA (EJ: WhatsApp, Instagram o un Video)
            const destinoURL = "https://www.google.com"; 

            setTimeout(() => {
                window.location.href = destinoURL;
            }, 1200);
        }
    </script>
