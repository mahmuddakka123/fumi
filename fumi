    <div class="controls">
        <button class="btn" onclick="playMusic()">ðŸŽ¹ MelodÃ­a</button>
        <button class="btn" onclick="revealMessage()">âœ¨ Para Fufi & Fufu</button>
    </div>

    <div id="overlay">
        <div id="typewriter"></div>
        <button class="btn" onclick="closeMessage()">Cerrar</button>
    </div>

    <audio id="bgMusic" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-8.mp3" type="audio/mpeg">
    </audio>

    <script type="importmap">
        { "imports": { "three": "https://unpkg.com/three@0.160.0/build/three.module.js" } }
    </script>

    <script type="module">
        import * as THREE from 'three';

        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.body.appendChild(renderer.domElement);

        // Miles de estrellas parpadeantes
        const starGeo = new THREE.BufferGeometry();
        const starVertices = [];
        for(let i=0; i<12000; i++) {
            starVertices.push((Math.random()-0.5)*2000, (Math.random()-0.5)*2000, (Math.random()-0.5)*2000);
        }
        starGeo.setAttribute('position', new THREE.Float32BufferAttribute(starVertices, 3));
        const stars = new THREE.Points(starGeo, new THREE.PointsMaterial({color: 0xffffff, size: 0.8, transparent: true, opacity: 0.8}));
        scene.add(stars);

        // Sol CÃ¡lido (Fufi/Fufu)
        const sun = new THREE.Mesh(
            new THREE.SphereGeometry(5, 64, 64),
            new THREE.MeshBasicMaterial({ color: 0xfff3e0 }) 
        );
        scene.add(sun);

        // Planetas con colores pastel
        const planets = [];
        const createPlanet = (size, color, dist, speed) => {
            const container = new THREE.Object3D();
            const planet = new THREE.Mesh(
                new THREE.SphereGeometry(size, 32, 32),
                new THREE.MeshStandardMaterial({ color: color, roughness: 0.7 })
            );
            planet.position.x = dist;
            container.add(planet);
            scene.add(container);
            planets.push({ container, speed });
        };

        createPlanet(0.8, 0xadb5bd, 14, 0.007); // Mercurio-like
        createPlanet(1.2, 0xd8e2dc, 22, 0.005); // Suave
        createPlanet(1.5, 0xffcad4, 32, 0.003); // Rosa pastel
        createPlanet(2.0, 0xf4acb7, 45, 0.002); // Rosado profundo

        const light = new THREE.PointLight(0xffffff, 800, 150);
        scene.add(light);
        scene.add(new THREE.AmbientLight(0x222222));

        camera.position.z = 60;
        camera.position.y = 25;
        camera.lookAt(0,0,0);

        function animate() {
            requestAnimationFrame(animate);
            sun.rotation.y += 0.001;
            planets.forEach(p => p.container.rotation.y += p.speed);
            stars.rotation.y += 0.0001;
            renderer.render(scene, camera);
        }
        animate();

        // LÃ³gica del Mensaje Personalizado
        const messageText = "Para Fufi & Fufu... \n\nEn este inmenso sistema solar, tÃº eres el sol que ilumina cada uno de mis dÃ­as. No importa quÃ© tan lejos orbiten los planetas, mi mundo siempre girarÃ¡ en torno a ti. âœ¨";
        let i = 0;

        window.revealMessage = () => {
            document.getElementById('overlay').style.display = 'flex';
            if (i === 0) typeWriter();
        };

        window.closeMessage = () => {
            document.getElementById('overlay').style.display = 'none';
        };

        function typeWriter() {
            if (i < messageText.length) {
                const char = messageText.charAt(i);
                document.getElementById('typewriter').innerHTML += char === "\n" ? "<br>" : char;
                i++;
                setTimeout(typeWriter, 60);
            }
        }

        window.playMusic = () => {
            const audio = document.getElementById('bgMusic');
            if (audio.paused) {
                audio.play();
                document.querySelector('.btn').innerHTML = "â¸ Pausar";
            } else {
                audio.pause();
                document.querySelector('.btn').innerHTML = "ðŸŽ¹ MelodÃ­a";
            }
        };

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
